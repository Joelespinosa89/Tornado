@using Padron.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<style>
 

</style>

<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header"><b>Registro Electores ( Iniciar sesión ) </b></div>
        <div class="card-body">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { }))
            {
                <div class="text-center">

                    <img src="~/images/feri.jpeg" class="text-center" alt="" width="100">

                </div>

                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Cedula" })
                        @*<input type="text" id="Username" name="Username" value="@Model.Username" class="form-control" placeholder="Cédula" required="required" autofocus="autofocus">*@
                        <label for="Username">Cédula</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Contraseña" })

                        @*<input type="password" id="Password" value="@Model.Password" name="Password" class="form-control" placeholder="Contraseña" required="required">*@
                        <label for="Password">Contraseña</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me">
                            Mantener sesión
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Iniciar sesión</button>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })



            }
            <div class="text-center">
                @Html.ActionLink("Crear una cuenta", "Register", null, new { @class = "d-block small mt-3" })
            </div>




        </div>
    </div>
</div>

